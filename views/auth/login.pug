extends ../layout/index

block contenido 
    div.py-10 
        h1.text-center.font-extrabold.my-10.text-4xl.text-azulrey Bienes 
            span.font-normal.text-black Raíces 
        h2.text-center.font-extrabold.text-2xl=page

         if errors
            div.max-w-md.mx-auto.my-10
                each error in errors
                    if error.msg
                        div.bg-reds.text-white.p-4.rounded-md.flex.items-center.justify-between.mb-2
                            p.text-sm.font-bold= error.msg
                            button.ml-2.bg-transparent.border-0.text-white(onclick="this.parentElement.style.display='none'") &times;


        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form(method="POST" action="/auth/login").space-y-5.px-6
                    input(type="hidden" name="_csrf" value=csrfToken)
                   
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold Correo Electronico: 
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(type="email" placeholder="Ej. JuanitoPeréz@gmail.com" name="correo_usuario")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold Contraseña: 
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(type="password" placeholder="Mínimo de 8 carácteres" name="pass_usuario")
                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/CreateAccount" class="hover:underline decoration2 hover:decoration-peri") ¿No tienes cuenta? Registrate
                        a.text-gray-500.text-xs(href="/auth/passwordRecovery" class="hover:underline decoration2 hover:decoration-morado") Olvide mi Contraseña
                    input(class="w-full bg-morado hover:bg-azulclaro-100 text-white font-bold py-3 cursor-pointer" type="submit" value="Ingresar")