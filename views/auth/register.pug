extends ../layout/index

block contenido
    div.py-10
        h1.text-center.font-extrabold.my-10.text-4xl.text-azulrey Bienes 
            span.font-normal.text-black Raíces
        h2.text-center.font-extrabold.text-2xl= page

        if errors
            div(class="max-w-md mx-auto my-10")
                each error in errors
                    div(class="bg-rojo text-white p-4 rounded-md flex items-center text-aling:center justify-between mb-2 alert fade-in")
                        if error.msg == "El nombre no puede ir vacío"
                            i(class="fas fa-user-times mr-2")  
                        else if error.msg == "El correo electrónico es un campo obligatorio"
                            i(class="fas fa-envelope-open-text mr-2")  
                        else if error.msg == "El correo electrónico no tiene el formato correcto"
                            i(class="fas fa-exclamation-triangle mr-2")
                        else if error.msg == "La contraseña es un campo obligatorio"
                            i(class="fas fa-key mr-2")  
                        else if error.msg == "El Password debe ser de al menos 8 caracteres"
                            i(class="fas fa-lock mr-2") 
                        p(class="text-sm font-bold")= error.msg
                        button(class="ml-2 bg-transparent border-0 text-white" onclick="this.parentElement.style.display='none'") &times;
                        
        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form(method="POST" action="/auth/newUser" ).space-y-5.px-6
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div
                        label.block.text-sm.uppercase.text-black.mb-2.font-bold Nombre Completo: 
                        input#name.w-full.px-3.py-2.border-2.border-black.rounded-md(type="text" placeholder="Ej. Juanito Peréz" name="name" value=User.name)
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold Email de Registro: 
                        input#email.w-full.px-3.py-2.border-2.border-black.rounded-md(type="email" placeholder="Ej. usuario@paisdelasmaravillas.com" name="correo_usuario" value=User.email)
                    div
                        label.block.text-sm.uppercase.text-black.mb-2.font-bold Fecha de Nacimiento: 
                        input#birthdate.w-full.px-3.py-2.border-2.border-black.rounded-md(type="date" name="fecha_nacimiento" value=User.fecha_nacimiento)
                    div
                        label.block.text-sm.uppercase.text-black.mb-2.font-bold Contraseña: 
                        input#password.w-full.px-3.py-2.border-2.border-black.rounded-md(type="password" placeholder="Minimo de 8 caracteres" name="pass_usuario")
                    div
                        label.block.text-sm.uppercase.text-black.mb-2.font-bold Confirmar Contraseña: 
                        input#password2.w-full.px-3.py-2.border-2.border-black.rounded-md(type="password" placeholder="Minimo de 8 caracteres" name="pass2_usuario")
                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/login" class="hover:underline decoration-2 hover:decoration-azulrey") ¿Ya tienes cuenta? Inicia Sesión
                        a.text-gray-500.text-xs(href="/auth/passwordRecovery" class="hover:underline decoration-2 hover:decoration-azulrey") Recuperar Contraseña
                    input(class="w-full bg-azulrey hover:bg-morado-100 text-black font-bold py-3 cursor-pointer" type="submit" value="Crear Cuenta")

    script.
        // Animación de desvanecimiento y eliminación de la alerta
        document.querySelectorAll('.alert').forEach(error => {
            setTimeout(() => {
                error.classList.add('fade-out');  // Desvanece la alerta
                setTimeout(() => {
                    error.style.display = 'none';  // Elimina la alerta del DOM
                }, 1000);  // Coincide con el tiempo de la animación
            }, 7000);  // Tiempo antes de que inicie la animación
        });

    style.
        /* Animación de fade-in */
        @keyframes fadeIn {
            0% {
                opacity: 0;
            }
            100% {
                opacity: 1;
            }
        }

        /* Animación de fade-out */
        @keyframes fadeOut {
            0% {
                opacity: 1;
            }
            100% {
                opacity: 0;
            }
        }

        /* Clase para aplicar fade-in al aparecer */
        .fade-in {
            animation: fadeIn 1s ease-in-out;
        }

        /* Clase para aplicar fade-out al desaparecer */
        .fade-out {
            animation: fadeOut 1s ease-in-out;
        }

        /* Efecto de mover la alerta al pasar el ratón */
        .alert:hover {
            transform: translateX(10px);  /* Mueve la alerta 10px a la derecha */
            cursor: pointer; /* Cambia el cursor para indicar interacción */
            transition: transform 0.3s ease;  /* Suaviza el movimiento */
        }
